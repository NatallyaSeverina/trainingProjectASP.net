@using Microsoft.AspNet.Identity
<div class=" nav navbar-right">
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-left" }))
        {
            @Html.AntiForgeryToken()

            <ul class="nav navbar-nav navbar-left">
                <li>
                    @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                </li>
                <li><a class="navbar-link" href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
            </ul>

        }
    }
    else
    {
        <ul class="nav navbar-nav navbar-left">
            <li>@Html.ActionLink("Зарегистрироваться", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
            <li>@Html.ActionLink("Войти", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink"})</li>
        </ul>

    }
   
    </div>
<div class="nav navbar-nav navbar-left">
    <ul class="nav navbar-nav navbar-left">
       <li> @Html.Action("CartSummary", "Cart")</li>
        </ul>

</div>
