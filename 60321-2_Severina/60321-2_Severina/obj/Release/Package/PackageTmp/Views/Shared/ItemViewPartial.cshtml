@model CAR.Entities.Car
<div class="col-md-4">
    <div class="thumbnail">
        <img height="200" src="@Url.Action("getImage",new {id=Model.CarId })" alt='NoImage' class="img-thumbnail" />
        <div class="caption">
            <div class="item-name">
                <h3>@Model.CarName</h3>
            </div>
            <div class="item-description">
                @Model.Description
            </div>
            <div class="centered">
                <h3 class="badge">@Model.CarYear год</h3>
                <h3 class="badge">@Model.Price у.е.</h3>
            </div>
            <div class="centered">
                <a href=@Url.Action("AddToCart", "Cart", new { id=Model.CarId,returnUrl=Request.Path})
                <a href="#" class="btn btn-primary">
                    <span class=" glyphicon glyphicon-shopping-cart">
                        </span>
                    В корзину
                </a>
            </div>
        </div>
    </div>
</div>